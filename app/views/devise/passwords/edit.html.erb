<div class="container pt-lg">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow zindex-100">
        <div class="card-body px-md-5 py-5">
          <div class="text-center mb-5">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="input-group"><%= f.label :password, "New password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters min)</em> 
    <% end %> </div>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
   <div class="input-group"> <%= f.label :password_confirmation, "Confirm new password" %></div>
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-primary mb-3 mb-sm-0" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>
<br/>
