<body>
    <main>


        <section class="slice slice-lg bg-cover bg-size--cover" style="background-image: url('https://www.freewebheaders.com/wordpress/wp-content/uploads/cute-sleepy-kitten.jpg');">
            <div class="container py-lg">
                <div class="row">
                    <div class="col-lg-5">
                        <h2 class="h1 text-white">My kittens shop</h2>
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">

                            <p class="lead text-white mt-4">The best pictures in the world! No, on EAAAAAARTH! Meooooow</p>

                            <!-- Display a button if you are an admin or an unauthentified user-->
                            <% if user_signed_in? && current_user.is_admin %>
                            <%= link_to "Add an item", new_item_path, class: "btn btn-white btn-circle mt-4" %>
                            <% elsif user_signed_in?%>
                            <% else %>
                            <%= link_to "Start shopping", user_session_path, class: "btn btn-white btn-circle mt-4" %>
                            <% end %>

                    </div>
                </div>
            </div>
            <div class="shape-container" data-shape-style="wavify" data-shape-position="bottom">
                <svg width="100%" height="100%" version="1.1" xmlns="http://www.w3.org/2000/svg" class="shape-fill-white"
                    data-toggle="wavify">
                    <defs></defs>
                    <path d="" class="shape-fill-white" />
                </svg>
            </div>
        </section>

        <section class="slice slice-lg" id="sct-products">
            <div class="container">
                <div class="row">
                    <% @items.each do |item| %>
                    <div class="col-lg-6 col-sm-6 mb-5">
                        <div class="card card-product no-border shadow shadow--hover">
                            <div class="card-image">


                            <!-- Link containing an image. On click it redirects to the page show of item-->
                              <%= link_to item_path(item.title) do %>


                                <!-- Display the image with a url or with an image upload-->
                                <%if item.image.attached?%>
                                <%= image_tag(item.image, alt: 'image', :class => "img-center", style: "width:400px") %>

                                <%else%>
                                <img alt="Image placeholder" src="<%= item.image_url %>" class="img-center" style="width: 95%; height: 95%">
                                <%end%>



                                <% end %>


                            </div>
                            <div class="card-body pt-0 text-center">
                                <%= link_to item.title, item_path(item), class: "card-title" %>
                                <span class="card-price">
                                    <%= item.price %> â‚¬</span>

                            </div>
                            <div class="card-product-actions" data-animation-in="slideInLeft" data-animation-out="slideOutLeft">
                                <button type="button" class="btn-product-action" data-toggle="tooltip"
                                    data-original-title="Add to cart">
                                    <i class="fas fa-shopping-bag"></i>
                                </button>
                                <button type="button" class="btn-product-action" data-toggle="tooltip"
                                    data-original-title="Wishlist">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>

            </div>
        </section>

    </main>
</body>